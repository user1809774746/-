# /etc/nginx/sites-available/amapmcpserver.xyz

# =============================================
# HTTP 服务器 - 重定向到HTTPS + ACME验证
# =============================================
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name amapmcpserver.xyz www.amapmcpserver.xyz;
    
    # 安全头部
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    
    # ACME 挑战验证目录 (用于证书自动续期)
    location ^~ /.well-known/acme-challenge/ {
        root /var/www/certbot;
        allow all;
        default_type "text/plain";
        try_files $uri =404;
    }
    
    # 其他所有请求重定向到HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
    
    access_log /var/log/nginx/http_access.log main;
    error_log /var/log/nginx/http_error.log warn;
}

# =============================================
# HTTPS 服务器 - 主配置
# =============================================
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name amapmcpserver.xyz www.amapmcpserver.xyz;
    
    # ========================
    # SSL 证书配置
    # ========================
    ssl_certificate /etc/letsencrypt/live/amapmcpserver.xyz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/amapmcpserver.xyz/privkey.pem;
    
    # ========================
    # SSL 会话设置
    # ========================
    ssl_session_cache shared:SSL:50m;
    ssl_session_timeout 1d;
    ssl_session_tickets off;
    
    # ========================
    # 现代加密协议配置
    # ========================
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers on;
    ssl_ecdh_curve secp384r1;
    
    # ========================
    # OCSP 装订优化 (注释掉有问题的配置)
    # ========================
    # ssl_stapling on;
    # ssl_stapling_verify on;
    resolver 8.8.8.8 1.1.1.1 [2606:4700:4700::1111] valid=300s;
    resolver_timeout 5s;
    
    # ========================
    # 安全头部增强
    # ========================
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "geolocation=(self), midi=(), sync-xhr=(), microphone=(self), camera=(self), magnetometer=(self), gyroscope=(self), fullscreen=(self), payment=()" always;
    
    # 内容安全策略 (根据实际需求调整)
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https: blob:; worker-src 'self' blob:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; font-src 'self' https:; connect-src 'self' https:; frame-ancestors 'self'; form-action 'self';" always;
    
    # ========================
    # 网站根目录配置 - 修改为有权限的目录
    # ========================
    root /root/dist;  # 修改为有权限的目录
    index index.html index.htm;
    
    # ========================
    # 日志配置
    # ========================
    access_log /var/log/nginx/ssl_access.log main;
    error_log /var/log/nginx/ssl_error.log warn;
    
    # ========================
    # 主请求处理 - 修复重定向循环
    # ========================
    location / {
        try_files $uri $uri/ @rewrite;
    }
    
    location @rewrite {
        rewrite ^.*$ /index.html last;
    }
    
    # ========================
    # API 代理配置 - 转发到8081端口
    # ========================
    location ~* ^/api/ {
        proxy_pass http://localhost:8081;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # 超时设置
        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300;
        
        # 跨域配置
        add_header Access-Control-Allow-Origin * always;
        add_header Access-Control-Allow-Methods 'GET, POST, OPTIONS, PUT, DELETE' always;
        add_header Access-Control-Allow-Headers 'DNT,X-Mx-ReqToken,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Authorization' always;
        
        # 处理OPTIONS预检请求
        if ($request_method = 'OPTIONS') {
            add_header Access-Control-Allow-Origin *;
            add_header Access-Control-Allow-Methods 'GET, POST, OPTIONS, PUT, DELETE';
            add_header Access-Control-Allow-Headers 'DNT,X-Mx-ReqToken,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Authorization';
            add_header Access-Control-Max-Age 1728000;
            add_header Content-Type 'text/plain charset=UTF-8';
            add_header Content-Length 0;
            return 204;
        }
    }
    
    # ========================
    # 静态文件缓存
    # ========================
    location ~* \.(?:jpg|jpeg|png|gif|ico|cur|gz|svg|svgz|mp4|ogg|ogv|webm|htc|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    location ~* \.(?:css|js|woff2?)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # ========================
    # 安全防护
    # ========================
    # 禁止访问隐藏文件
    location ~ /\.(?!well-known) {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # 禁止敏感文件访问
    location = /favicon.ico { 
        access_log off; 
        log_not_found off; 
    }
    
    location = /robots.txt { 
        access_log off; 
        log_not_found off; 
    }
    
    # ========================
    # 错误页面 - 使用默认配置
    # ========================
    # 移除自定义错误页面配置，使用Nginx默认错误页面
    
    # ========================
    # 性能优化
    # ========================
    # 启用零拷贝技术
    aio threads;
    directio 4m;
    output_buffers 1 128k;
    
    # Brotli压缩 (如果已安装)
    # brotli on;
    # brotli_comp_level 6;
    # brotli_types *;
}